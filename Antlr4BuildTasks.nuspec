<?xml version="1.0" encoding="utf-8"?>
<!-- This file is used only if you need a build for the task
tool for debugging. For normal use, build the nupkg file through
Msbuild 4.0+, which now integrates Nuget packing functionality. At the
moment, I cannot get "content" information like pdbs into the /build
directory of the nupkg file. That's what this nuspec file does. -->
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata minClientVersion="2.7">
    <id>Antlr4BuildTasks</id>
    <version>1.0.2</version>
    <authors>Sam Harwell, Terence Parr. Modified by Ken Domino.</authors>
    <owners>Ken Domino</owners>
    <description>Derivative of Harwell's Antlr4cs that contains only: Msbuild rules for Antlr4 grammars; file properties for Antlr4 in VS2017. Antlr4 Java tool must be installed.</description>
    <language>en-us</language>
    <projectUrl>https://github.com/kaby76/antlr4cs</projectUrl>
    <licenseUrl>https://raw.github.com/tunnelvisionlabs/antlr4cs/master/LICENSE.txt</licenseUrl>
    <iconUrl>https://raw.github.com/antlr/website-antlr4/master/images/icons/antlr.png</iconUrl>
    <copyright>Copyright Â© Sam Harwell 2015</copyright>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <developmentDependency>true</developmentDependency>
    <tags>antlr antlr4 parsing</tags>
    <title>ANTLR 4 Code Generator</title>
    <summary>Derivative of Harwell's Antlr4cs for building.</summary>
  </metadata>
  <files>
    <!-- Tools -->

    <!-- Build Configuration -->

    <file src="Antlr4BuildTasks\Antlr4BuildTasks.props" target="build"/>
    <file src="Antlr4BuildTasks\Antlr4BuildTasks.targets" target="build"/>
    <file src="Antlr4BuildTasks\Antlr4BuildTasks.DefaultItems.props" target="build"/>
    <file src="Antlr4BuildTasks\Antlr4BuildTasks.DefaultItems.targets" target="build"/>
    <file src="Antlr4BuildTasks\Antlr4BuildTasksSchema.xml" target="build"/>
    <file src="Antlr4BuildTasks\Antlr4.xml" target="build"/>

    <!-- Build Tasks -->

    <file src="Antlr4BuildTasks\bin\Debug\netstandard1.5\Antlr4BuildTasks.dll" target="lib\netstandard1.5"/>
    <file src="Antlr4BuildTasks\bin\Debug\netstandard1.5\Antlr4BuildTasks.dll" target="lib\net40"/>
    <file src="Antlr4BuildTasks\bin\Debug\netstandard1.5\Antlr4BuildTasks.pdb" target="lib\netstandard1.5"/>
    <file src="Antlr4BuildTasks\bin\Debug\netstandard1.5\Antlr4BuildTasks.pdb" target="lib\net40"/>
  </files>
</package>
